<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="Thesagaydak\News\Block\Adminhtml\Post\Edit" name="thesagaydak_news_post_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Thesagaydak\News\Block\Adminhtml\Post\Edit\Tabs" name="thesagaydak_news_post_tabs">
                <block class="Thesagaydak\News\Block\Adminhtml\Post\Edit\Tab\Post" name="thesagaydak_news_post_edit_tab_post"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">post</argument>
                    <argument name="block" xsi:type="string">thesagaydak_news_post_edit_tab_post</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
